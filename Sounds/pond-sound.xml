    </condition>
    <position>
      <x> -2.0 </x>
      <y>  0.0 </y>
      <z> -2.0 </z>
    </position>
    <volume>
      <property>/engines/engine[0]/mp-osi</property>
      <factor> 0.009 </factor>
      <min> 0.01 </min>
      <max> 0.15 </max>
      <offset> 0.04 </offset>
    </volume>
    <pitch>
      <property>/engines/engine[0]/rpm</property>
      <factor> 0.0004 </factor>
      <min> 0.1 </min>
      <max> 2.0 </max>
      <offset> 0.3 </offset>
    </pitch>
  </engine>

