<PropertyList>

<fx>

  <!-- Engine 1 -->
  <crank>
    <name>engstart1</name>
    <path>Aircraft/Pond-Racer/Sounds/engine_start.wav</path>
    <condition>
      <property>/engines/engine[0]/cranking</property>
    </condition>
    <position>
      <x> -2.0 </x>
      <y>  0.0 </y>
      <z> -2.0 </z>
    </position>
    <volume>
      <offset> 0.01 </offset>
      <max> 0.010 </max>
    </volume>
  </crank>

  <crank>
    <name>crank1</name>
    <mode>looped</mode>
    <path>Sounds/cranking.wav</path>
    <condition>
      <and>
        <property>/engines/engine[0]/cranking</property>
        <not>
          <property>/engines/engine[0]/running</property>
        </not>
      </and>
    </condition>
    <position>
      <x> -2.0 </x>
      <y>  0.0 </y>
      <z> -2.0 </z>
    </position>
    <volume>
      <offset> 0.5 </offset>
    </volume>
  </crank>

